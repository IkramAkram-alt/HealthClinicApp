<h1 class="mb-4">Patient Statistics</h1>

<div class="mb-4">
  <%= link_to 'Add New Patient', new_patient_path, class: 'btn btn-success btn-lg me-2' %>
  <%= link_to 'Migration Logs', migration_logs_path, class: 'btn btn-secondary btn-lg' %>
  <%= link_to 'Patients Managment', patients_path, class: 'btn btn btn-warning btn-lg' %>
</div>

<div class="mb-4">
  <h2 class="mb-3">Patients by Province</h2>
  <%= column_chart @patients_by_province, class: 'img-fluid' %>
</div>

<div class="mb-4">
  <h2 class="mb-3">Patients by Sex</h2>
  <%= pie_chart @patients_by_sex, class: 'img-fluid' %>
</div>

<div>
  <h2 class="mb-3">Vitals by Type</h2>
  <%= bar_chart @patients_by_vital_type, class: 'img-fluid' %>
</div>
