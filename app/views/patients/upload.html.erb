<h1 class="text-center my-4">Patient Management</h1>

<div class="container">
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Upload Patient or Vital CSV File</h5>
    </div>
    <div class="card-body">
      <%= form_with url: process_csv_patients_path, local: true, method: :post, multipart: true do |form| %>
        <div class="mb-3">
          <%= form.label :file, "Choose a CSV File to Upload", class: "form-label" %>
          <%= form.file_field :file, accept: ".csv", class: "form-control" %>
        </div>
        
        <div class="text-center">
          <%= form.submit "Import CSV", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Button to Manually Add Patient -->
  <div class="text-center mb-4">
    <%= link_to 'Add New Patient', new_patient_path, class: 'btn btn-success btn-lg me-2' %>
    <%= link_to 'Patient Statistics', stats_patients_path, class: 'btn btn-info btn-lg' %>
    <%= link_to 'Migration Logs', migration_logs_path, class: 'btn btn-secondary btn-lg' %>
    <%= link_to 'Patients Managment', patients_path, class: 'btn btn btn-warning btn-lg' %>
  </div>
</div>
