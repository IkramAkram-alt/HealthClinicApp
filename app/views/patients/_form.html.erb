<h1 class="text-center mb-4">
  <%= action_name == 'new' ? 'Add New Patient' : 'Edit Patient' %>
</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_with(model: @patient, local: true) do |form| %>
            <div class="mb-4">
              <%= form.label :health_identifier, class: 'form-label' %>
              <%= form.text_field :health_identifier, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :health_identifier_province, class: 'form-label' %>
              <%= form.text_field :health_identifier_province, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :first_name, class: 'form-label' %>
              <%= form.text_field :first_name, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :last_name, class: 'form-label' %>
              <%= form.text_field :last_name, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :middle_name, class: 'form-label' %>
              <%= form.text_field :middle_name, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :phone, class: 'form-label' %>
              <%= form.text_field :phone, class: 'form-control', placeholder: 'xxx-xxx-xxxx' %>
            </div>

            <div class="mb-4">
              <%= form.label :email, class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :address1, class: 'form-label' %>
              <%= form.text_field :address1, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :address2, class: 'form-label' %>
              <%= form.text_field :address2, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :address_province, class: 'form-label' %>
              <%= form.text_field :address_province, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :address_city, class: 'form-label' %>
              <%= form.text_field :address_city, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :address_postal_code, class: 'form-label' %>
              <%= form.text_field :address_postal_code, class: 'form-control' %>
            </div>

            <div class="mb-4">
              <%= form.label :date_of_birth, class: 'form-label' %>
              <%= form.date_field :date_of_birth, class: 'form-control datepicker', autocomplete: 'off' %>
            </div>

            <div class="mb-4">
              <%= form.label :sex, class: 'form-label' %>
              <%= form.select :sex, [['Male', 'Male'], ['Female', 'Female'], ['Other', 'Other']], { include_blank: true }, class: 'form-select' %>
            </div>

            <div class="text-center">
              <%= form.submit class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

