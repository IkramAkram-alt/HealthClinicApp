<h1 class="text-center my-4">Patient Management</h1>

<div class="container">
  <!-- Navigation Buttons -->
  <div class="text-center mb-4">
    <%= link_to 'Add New Patient', new_patient_path, class: 'btn btn-success btn-lg me-2' %>
    <%= link_to 'Upload CSV', upload_patients_path, class: 'btn btn-primary btn-lg me-2' %>
    <%= link_to 'Patient Statistics', stats_patients_path, class: 'btn btn-info btn-lg' %>
    <%= link_to 'Migration Logs', migration_logs_path, class: 'btn btn-secondary btn-lg' %>
  </div>

  <!-- Patient Table -->
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">Patients</h5>
    </div>
    <div class="card-body">
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>Health Identifier</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Sex</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
            <tr>
              <td><%= patient.health_identifier %></td>
              <td><%= patient.first_name %></td>
              <td><%= patient.last_name %></td>
              <td><%= patient.date_of_birth ? patient.date_of_birth.strftime("%Y-%m-%d") : 'N/A' %></td>
              <td><%= patient.sex %></td>
              <td>
                <%= link_to 'Show', patient_path(patient), class: 'btn btn-info btn-sm me-1' %>
                <%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-warning btn-sm me-1' %>
                <%= link_to 'Delete', patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
