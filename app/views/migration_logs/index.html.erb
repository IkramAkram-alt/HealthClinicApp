<h1 class="mb-4 text-center">Migration Statistics</h1>

<div class="mb-4 text-center">
    <%= link_to 'Add New Patient', new_patient_path, class: 'btn btn-success btn-lg me-2' %>
    <%= link_to 'Patient Statistics', stats_patients_path, class: 'btn btn-info btn-lg' %>
    <%= link_to 'Patients Managment', patients_path, class: 'btn btn btn-warning btn-lg' %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Date</th>
        <th>Patients Imported</th>
        <th>Migration Duration (seconds)</th>
      </tr>
    </thead>
    <tbody>
      <% @migration_logs.each do |log| %>
        <tr>
          <td><%= log.migration_date.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= log.patients_imported %></td>
          <td><%= log.migration_duration.round(2) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
